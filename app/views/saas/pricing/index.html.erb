<%= link_to "HOME", main_app.root_path %>

<h1>Plans</h1>

<% @products.each do |product| %>
  <div class="card">
    <h5 class="card-header">
      <%= product.name %>    
    </h5>
    <div class="card-body">
      <% product.plans.each do |plan| %>
        <p>
          <%= plan.name %>
          <%= number_to_currency plan.price_in_cents / 100.0 %> per <%= plan.interval %>    
        </p>
      <% end %>
    </div>
  </div>
<% end %>